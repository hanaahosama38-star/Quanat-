async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    keyboard = [[InlineKeyboardButton(subj, callback_data=subj)] for subj in materials.keys()]
    await update.message.reply_text("ðŸ“š Ø³Ù†Ø© Ø£ÙˆÙ„Ù‰ - General\nØ§Ø®ØªØ§Ø± Ø§Ù„Ù…Ø§Ø¯Ø©:", reply_markup=InlineKeyboardMarkup(keyboard))

async def button(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()
    subject = query.data
    if subject in materials:
        text = f"ðŸ“‚ {subject}:\n"
        for m in materials[subject]:
            text += f"- {m['type']}: {m['url']}\n"
        await query.edit_message_text(text)

def main():
    app = ApplicationBuilder().token(TOKEN).build()
    app.add_handler(CommandHandler("start", start))
    app.add_handler(CallbackQueryHandler(button))
    app.run_polling()

